		{
			"name": "Login - Valid Credentials",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Token is returned\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json).to.have.property(\"token\");",
							"    pm.expect(json.token).to.be.a(\"string\");",
							"    pm.expect(json.token.length).to.be.greaterThan(0);",
							"    ",
							"    // Save token for other requests",
							"    pm.environment.set(\"auth_token\", json.token);",
							"});",
							"",
							"pm.test(\"Success is true\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json.success).to.be.true;",
							"});",
							"",
							"pm.test(\"User email is correct\", function () {",
							"    const json = pm.response.json();",
							"    pm.expect(json.user.email).to.eql(\"user@test.com\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"user@test.com\",\n    \"password\": \"Password123!\"\n}"
				},
				"url": {
					"raw": "http://localhost:3000/api/login",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "3000",
					"path": [
						"api",
						"login"
					]
				}
			},
			"response": []
		},
